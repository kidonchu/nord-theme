	background-color rgba(0, 0, 0, 0)
	background-image -moz-linear-gradient(top, #d8d8d8, #d8d8d8)
	background-image -webkit-gradient(linear, 0 0, 0 100%, from(#d8d8d8), to(#d8d8d8))
	background-image -webkit-linear-gradient(top, #d8d8d8, #d8d8d8)
	background-image -o-linear-gradient(top, #d8d8d8, #d8d8d8)
	background-image linear-gradient(to bottom, #d8d8d8, #d8d8d8)
	background-repeat repeat-x
	-webkit-box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
	-moz-box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
	box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
	color #674397
	text-shadow 0 -1px 0 rgba(0,0,0,0.05)
	&:hover
		background-color rgba(0, 0, 0, 0)
		background-image -moz-linear-gradient(top, #d2d2d2, #b8b8b8)
		background-image -webkit-gradient(linear, 0 0, 0 100%, from(#d2d2d2), to(#b8b8b8))
		background-image -webkit-linear-gradient(top, #d2d2d2, #b8b8b8)
		background-image -o-linear-gradient(top, #d2d2d2, #b8b8b8)
		background-image linear-gradient(to bottom, #d2d2d2, #b8b8b8)
		background-repeat repeat-x
		-webkit-box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
		-moz-box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
		box-shadow inset 0px 1px 0px 0px #fff, 0px 0px 0px 1px rgba(50, 50, 50, 0.75), 0px 1px 3px 0px rgba(0, 0, 0, 0.3)
	&:active
		background-color rgba(0, 0, 0, 0)
		background-image -moz-linear-gradient(top, #b8b8b8, #d2d2d2)
		background-image -webkit-gradient(linear, 0 0, 0 100%, from(#b8b8b8), to(#d2d2d2))
		background-image -webkit-linear-gradient(top, #b8b8b8, #d2d2d2)
		background-image -o-linear-gradient(top, #b8b8b8, #d2d2d2)
		background-image linear-gradient(to bottom, #b8b8b8, #d2d2d2)
		background-repeat repeat-x
		-webkit-box-shadow inset 0px 1px 3px 0px rgba(0, 0, 0, 0.25), 0px 0px 0px 1px rgba(54, 17, 103, 0.75), 0px 1px 0px 1px rgba(255, 255, 255, 0.25)
		-moz-box-shadow inset 0px 1px 3px 0px rgba(0, 0, 0, 0.25), 0px 0px 0px 1px rgba(54, 17, 103, 0.75), 0px 1px 0px 1px rgba(255, 255, 255, 0.25)
		box-shadow inset 0px 1px 3px 0px rgba(0, 0, 0, 0.25), 0px 0px 0px 1px rgba(54, 17, 103, 0.75), 0px 1px 0px 1px rgba(255, 255, 255, 0.25)
